{
    "require": {
        "phpmailer/phpmailer": "^6.9",
        "mailchimp/marketing": "^3.0",
        "mailchimp/transactional": "^1.0",
        "vlucas/phpdotenv": "*",
        "stripe/stripe-php": "^15.10",
        "defuse/php-encryption": "^2.4",
        "monolog/monolog": "^3.7",
        "twig/twig": "^3.14",
        "intervention/image": "^3.8",
        "nesbot/carbon": "^3.8",
        "phpoffice/phpspreadsheet": "^3.3",
        "google/cloud-language": "^0.34.0",
        "google/recaptcha": "^1.3",
        "google/cloud-ai-platform": "^1.8",
        "google/cloud-core": "^1.60",
        "google/cloud-storage": "^1.43",
        "bjeavons/zxcvbn-php": "^1.3",
        "predis/predis": "^2.3",
        "firebase/php-jwt": "^6.11",
        "chillerlan/php-qrcode": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan": "*",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "NGN\\Lib\\": "lib/",
            "App\\": "src/"
        },
        "classmap": [
            "lib/classes/",
            "lib/controllers/",
            "lib/handlers/",
            "lib/bots/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit -c phpunit.xml.dist",
        "lint": "php vendor/bin/phpcs --standard=phpcs.xml",
        "lint:fix": "php vendor/bin/phpcbf --standard=phpcs.xml",
        "stan": "php vendor/bin/phpstan analyse --configuration=phpstan.neon",
        "ci": "composer lint && composer stan && composer test"
    }
}
