<?xml version="1.0"?>
<ruleset name="NGN Standards">
  <description>PSR-12 baseline for NGN 2.0 (exclude legacy and vendor)</description>
  <rule ref="PSR12"/>

  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>legacy/*</exclude-pattern>
  <exclude-pattern>frontend/*</exclude-pattern>
  <exclude-pattern>storage/*</exclude-pattern>
  <exclude-pattern>tests_fixtures/*</exclude-pattern>

  <file>lib</file>
  <file>api/v1</file>
  <file>jobs</file>
</ruleset>
