# NextGen Noise 2.0 - Environment Configuration Template
# CRITICAL: Copy this to .env and fill in YOUR credentials
# NEVER commit .env to git - only this .env.example

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_ENV=local
APP_DEBUG=true
APP_VERSION=0.1.0
NGN_VERSION=2.0.3
LOCAL_BASEURL=http://localhost:8088
BASEURL=https://nextgennoise.com/
AUTHOR=NextGen Noise

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=YOUR_DB_HOST
DB_PORT=3306
DB_NAME=YOUR_DB_NAME
DB_USER=YOUR_DB_USER
DB_PASS=YOUR_DB_PASSWORD_FROM_VAULT

# ============================================================================
# SOVEREIGN FLEET INTEGRATION (CRITICAL)
# ============================================================================
# Generated by: nexus tenant-register --name "NextGen Noise" --domain "nextgennoise.com"
# DO NOT commit actual values - use Vault for secrets

BEACON_API_KEY=YOUR_BEACON_API_KEY_FROM_REGISTRATION
BEACON_SECRET_KEY=YOUR_BEACON_SECRET_KEY_FROM_REGISTRATION
HMAC_SECRET=YOUR_HMAC_SECRET_FROM_REGISTRATION
TENANT_ID=nextgennoise
TENANT_DOMAIN=nextgennoise.com

# Fleet Node URLs
BEACON_URL=https://beacon.graylightcreative.com
VAULT_URL=https://vault.graylightcreative.com
LEDGER_URL=https://ledger.graylightcreative.com
PULSE_URL=https://pulse.graylightcreative.com
NEXUS_URL=https://nexus.graylightcreative.com
VENT_URL=https://vent.graylightcreative.com
AOS_URL=https://aos.graylightcreative.com
MANUAL_URL=https://manual.graylightcreative.com

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Will be replaced with Vent relay in future phases
SMTP_HOST=send.smtp.com
SMTP_PORT=587
SMTP_USER=YOUR_SMTP_USER
SMTP_PASSWORD=YOUR_SMTP_PASSWORD_FROM_VAULT

# ============================================================================
# API KEYS & INTEGRATIONS
# ============================================================================
# IMPORTANT: Store all secrets in Vault, not in .env
# Reference: nexus store-secret nextgennoise [key] [value]

GITHUB_PAT=YOUR_GITHUB_PAT_FROM_VAULT
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_FROM_VAULT
MAILCHIMP_API_KEY=YOUR_MAILCHIMP_KEY
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_SECRET_FROM_VAULT
INSTAGRAM_APP_ID=YOUR_INSTAGRAM_APP_ID
INSTAGRAM_APP_SECRET=YOUR_INSTAGRAM_SECRET_FROM_VAULT

# ============================================================================
# NOTES
# ============================================================================
# 1. Generate Fleet credentials: nexus tenant-register --name "NextGen Noise" --domain "nextgennoise.com"
# 2. Never commit .env - use this .env.example
# 3. Manage secrets via Vault: nexus store-secret nextgennoise [key] [value]
# 4. For subdomains (beta.nextgennoise.com): Create bootstrap file at public/index.php
